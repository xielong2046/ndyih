<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<meta name="Keywords" content="{$keywords}" />
<meta name="Description" content="{$description}" />
<!-- TemplateBeginEditable name="doctitle" -->
<title>{$page_title}</title>
<!-- TemplateEndEditable -->
<!-- TemplateBeginEditable name="head" -->
<!-- TemplateEndEditable -->
<link rel="shortcut icon" href="favicon.ico" />
<link rel="icon" href="animated_favicon.gif" type="image/gif" />
<link href="{$ecs_css_path}" rel="stylesheet" type="text/css" />
<link rel="alternate" type="application/rss+xml" title="RSS|{$page_title}" href="{$feed_url}" />
{* 包含脚本文件 *}
{insert_scripts files='common.js,jquery.js,png.js,ndyih_common.js'}
</head>
<body>
<div id="outWrap">
  <!-- #BeginLibraryItem "/library/page_header.lbi" --><!-- #EndLibraryItem -->
  <div id="proContainer">
    <div class="productWrapTop"></div>
    <div class="proInfoArea">
      <div class="proImg txtAlgCenter"><img src="{$goods.goods_img}" alt="{$goods.goods_name|escape:html}"></div>
      <div class="proInfo">
        <span class="productName">{$goods.goods_name|escape:html}</span>
        <div class="proPram">
          <ul>
            <li><span class="pramName">价 格：</span>{$goods.shop_price_formated}</li>
            <li><span class="pramName">品 牌：</span>{$goods.goods_brand}</li>
            <li><span class="pramName">商品货号：</span>{$goods.goods_sn}</li>
            <li><span class="pramName">上架时间：</span>{$goods.add_time}</li>
            <li><span class="pramName">{$lang.goods_weight}：</span>{$goods.goods_weight}</li>
            <li><span class="pramName">{$lang.amount}：</span><font id="ECS_GOODS_AMOUNT">￥1000</font></li>
            <li><span class="pramName">{$lang.number}：</span><input type="text" id="number" name="number" class="textStyle_f" size="5"></li>
          </ul>
        </div>
      </div>
      <div class="shopOper">
        <a href="#" class="buy">购&nbsp;&nbsp;&nbsp;买&nbsp;&nbsp;&nbsp;></a><a href="#" 
        class="shopCar">购物车&nbsp;&nbsp;></a>
      </div>
    </div>
    <div class="proDetial">
      <div style="text-align:center;">{$goods.goods_desc}</div>
    </div>
    <div class="productWrapButtom"></div>
  </div>
  <div id="containerEnd" style="border-width:0px;"><div class="conEndImg"></div></div>
  <!-- #BeginLibraryItem "/library/page_footer.lbi" --><!-- #EndLibraryItem -->
</div>
</body>
</html>