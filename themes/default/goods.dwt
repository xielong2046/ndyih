<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<meta name="Keywords" content="{$keywords}" />
<meta name="Description" content="{$description}" />
<!-- TemplateBeginEditable name="doctitle" -->
<title>{$page_title}</title>
<!-- TemplateEndEditable -->
<!-- TemplateBeginEditable name="head" -->
<!-- TemplateEndEditable -->
<link rel="shortcut icon" href="favicon.ico" />
<link rel="icon" href="animated_favicon.gif" type="image/gif" />
<link href="{$ecs_css_path}" rel="stylesheet" type="text/css" />
<link rel="alternate" type="application/rss+xml" title="RSS|{$page_title}" href="{$feed_url}" />
{* 包含脚本文件 *}
{insert_scripts files='common.js,jquery.js,png.js,transport.js,ndyih_common.js'}
</head>
<body>
<div id="outWrap">
  <!-- #BeginLibraryItem "/library/page_header.lbi" --><!-- #EndLibraryItem -->
  <div id="proContainer">
    <div class="productWrapTop"></div>
    <div class="preNextGood">
      {if $prev_good}<a href="{$prev_good.url}" class="preGood pngImg">上一件</a>{/if}
      {if $next_good}<a href="{$next_good.url}" class="nextGood pngImg">下一件</a>{/if}
    </div>
    <div class="proInfoArea">
      <form action="javascript:addToCart({$goods.goods_id})" method="post" name="ECS_FORMBUY" id="ECS_FORMBUY" >
      <div class="proImg txtAlgCenter"><img src="{$goods.goods_img}" alt="{$goods.goods_name|escape:html}"></div>
      <div class="proInfo">
        <span class="productName">{$goods.goods_name|escape:html}</span>
        <div class="proPram">
          <ul>
            <li><span class="pramName">价 格：</span>{$goods.shop_price_formated}</li>
            <li><span class="pramName">品 牌：</span>{$goods.goods_brand}</li>
            <li><span class="pramName">商品货号：</span>{$goods.goods_sn}</li>
            <li><span class="pramName">上架时间：</span>{$goods.add_time}</li>
            <li><span class="pramName">{$lang.goods_weight}：</span>{$goods.goods_weight}</li>
            <li><span class="pramName">{$lang.amount}：</span><font id="ECS_GOODS_AMOUNT">￥1000</font></li>
            <li><span class="pramName">{$lang.number}：</span><input type="text" id="number" name="number" class="textStyle_f" size="5" value="1" onblur="changePrice()"></li>
          </ul>
        </div>
      </div>
      <div class="shopOper">
        <a href="javascript:addToCart({$goods.goods_id})" class="buy">加入购物车 ></a><a href="javascript:collect({$goods.goods_id})" class="shopCar">加入收藏&nbsp;&nbsp;></a>
      </div>
      </form>
    </div>
    <div class="proDetial">
      <div style="text-align:center;">{$goods.goods_desc}</div>
    </div>
    <div class="productWrapButtom"></div>
  </div>
  <div id="containerEnd" style="border-width:0px;"><div class="conEndImg"></div></div>
  <!-- #BeginLibraryItem "/library/page_footer.lbi" --><!-- #EndLibraryItem -->
</div>
</body>
<script type="text/javascript">
var goods_id = {$goods_id};
var goodsattr_style = {$cfg.goodsattr_style|default:1};
var gmt_end_time = {$promote_end_time|default:0};
{foreach from=$lang.goods_js item=item key=key}
var {$key} = "{$item}";
{/foreach}
var goodsId = {$goods_id};
var now_time = {$now_time};

<!-- {literal} -->
onload = function(){
  changePrice();
  fixpng();
  try { onload_leftTime(); }
  catch (e) {}
}

/**
 * 点选可选属性或改变数量时修改商品价格的函数
 */
function changePrice()
{
  var attr = getSelectedAttributes(document.forms['ECS_FORMBUY']);
  var qty = document.forms['ECS_FORMBUY'].elements['number'].value;

  Ajax.call('goods.php', 'act=price&id=' + goodsId + '&attr=' + attr + '&number=' + qty, changePriceResponse, 'GET', 'JSON');
}

/**
 * 接收返回的信息
 */
function changePriceResponse(res)
{
  if (res.err_msg.length > 0)
  {
    alert(res.err_msg);
  }
  else
  {
    document.forms['ECS_FORMBUY'].elements['number'].value = res.qty;

    if (document.getElementById('ECS_GOODS_AMOUNT'))
      document.getElementById('ECS_GOODS_AMOUNT').innerHTML = res.result;
  }
}
<!-- {/literal} -->
</script>
</html>